@{
    ViewData["Title"] = "Delete Report";
}

<div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
    <div style="width: 350px; border: 1px solid #ccc; padding: 20px; box-shadow: 0 4px 8px rgba(0,0,0,0.15); background-color: #fff; border-radius: 8px;">
        <h1 style="font-size: 24px; color: #333; margin-bottom: 20px;">Delete Report</h1>
        <p style="font-size: 16px; color: #555; margin-bottom: 20px;">Are you sure you want to delete this report?</p>

        <form asp-action="Delete" style="text-align: center;">
            <input type="submit" value="Delete" class="btn btn-danger" style="margin-right: 10px;" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
