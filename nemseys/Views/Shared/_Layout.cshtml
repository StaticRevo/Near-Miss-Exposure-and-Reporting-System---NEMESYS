<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <title>@ViewData["Title"] - Nemesis</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Nemesis.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body class="bg-dark text-white d-flex flex-column min-vh-100">

    <header class="d-flex justify-content-between align-items-center py-2 bg-secondary text-sm px-3">
        @RenderSection("CustomHeader", required: false)
        @if (!IsSectionDefined("CustomHeader"))
        {
            <a asp-controller="Home" asp-action="Index" class="h2 font-weight-bold text-light text-decoration-none">Nemesys</a>
            <div class="d-flex align-items-center">
                <a asp-controller="Home" asp-action="MyReports" class="@(ViewContext.RouteData.Values["action"].ToString() == "MyReports" ? "active-link" : "text-light") hover:text-white mr-3">My Reports</a>
                <a asp-controller="Home" asp-action="LogReport" class="@(ViewContext.RouteData.Values["action"].ToString() == "LogReport" ? "active-link" : "text-light") hover:text-white mr-3">Log Report</a>
                <a asp-controller="Home" asp-action="HallOfFame" class="@(ViewContext.RouteData.Values["action"].ToString() == "HallOfFame" ? "active-link" : "text-light") hover:text-white mr-3">Hall Of Fame</a>

                <!-- Profile Icon with Dropdown -->
                <div class="dropdown">
                    <button id="profileMenuButton" class="btn btn-secondary" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user-circle fa-2x"></i>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="profileMenuButton">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li><a asp-controller="Home" asp-action="SignIn" class="dropdown-item">Sign In</a></li>
                            <li><a asp-controller="Home" asp-action="Register" class="dropdown-item">Register</a></li>
                        }
                        else
                        {
                            <li><a asp-controller="Account" asp-action="Logout" class="dropdown-item">Log Out</a></li>
                        }
                        <li><a asp-controller="Home" asp-action="Profile" class="dropdown-item">Profile</a></li>
                    </ul>
                </div>
            </div>
        }
    </header>

    <main class="flex-grow">
        @RenderBody()
    </main>

    @RenderSection("CustomFooter", required: false)
    @if (!IsSectionDefined("CustomFooter"))
    {
        <footer class="mt-auto bg-secondary text-center text-sm px-3 py-2">
            <div class="d-flex justify-content-between">
                <span class="text-lg">Nemesys</span>
                <span class="text-lg">Copyright Nemesys Inc.</span>
                <span class="text-lg text-decoration-underline">Support</span>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
