@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <title>My Reports</title>
    <link rel="stylesheet" href="/css/site.css" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-900 text-white">

    @section CustomHeader {
        <a asp-controller="Home" asp-action="Index" class="text-2xl font-bold hover:text-gray-300">Nemesys</a>
        <div class="flex items-center">
            <a asp-controller="Home" asp-action="MyReports" class="bg-transparent text-blue-500 mr-2 text-lg">My Reports</a>
            <a asp-controller="Home" asp-action="LogReport" class="bg-transparent text-gray-400 mr-2 text-lg">Log Report</a>

            <!-- Profile icon with dropdown -->
            <div class="relative ml-2">
                <button id="profileMenuButton" class="focus:outline-none">
                    <i class="fas fa-user-circle fa-2x text-lg text-gray-400 hover:text-white"></i>
                </button>
                <!-- Dropdown Menu -->
                <div id="profileMenuDropdown" class="hidden absolute right-0 mt-2 py-2 w-48 bg-gray-200 rounded-md shadow-xl z-20">
                    <a asp-controller="Home" asp-action="SignIn" class="block px-4 py-2 text-sm text-blue-600 hover:bg-gray-700">Sign In</a>
                    <a asp-controller="Home" asp-action="Register" class="block px-4 py-2 text-sm text-blue-600 hover:bg-gray-700">Register</a>
                </div>
            </div>

        </div>
    }

    <div class="container mx-auto px-4 py-2 pb-24">
        <section>
            <h2 class="text-4xl font-bold mb-6 text-center">My Reports</h2>

            <!-- Report Card -->
            <div class="mb-4 flex rounded shadow-lg bg-gray-800 overflow-hidden" style="max-width: 85vw;">
                <div class="flex-none w-1/5 relative">
                    <img class="absolute inset-0 w-full h-full object-cover rounded-l" src="https://placehold.co/300x350" alt="Report visual placeholder">
                </div>

                <!-- Content on the right -->
                <div class="w-4/5 p-10 flex flex-col justify-between">
                    <div>
                        <h2 class="text-lg font-semibold mb-1">Report Title</h2>
                        <p class="text-gray-400 text-sm">
                            This report presents a comprehensive overview of our recent software development project, detailing the objectives, methodologies employed, key findings, and recommendations for future work. It aims to provide stakeholders with a clear understanding of the project's scope, the challenges encountered, and the solutions implemented to overcome these obstacles.
                        </p>
                        <br>
                        <p class="text-gray-400 text-sm">
                            Additionally, the report includes an analysis of the project's impact on the organization's operational efficiency and suggests areas for further improvement. The insights gained from this project are intended to inform decision-making processes and guide the strategic direction of future development initiatives.
                        </p>
                    </div>
                    <br />
                    <div class="flex">
                        <a asp-controller="Home" asp-action="ViewReport" class="bg-gray-700 text-gray-300 py-2 px-4 mr-2 rounded">View Report</a>
                        <a asp-controller="Home" asp-action="InvestigateReport" class="bg-gray-700 text-gray-300 py-2 px-4 mr-2 rounded">Investigate Report</a>
                    </div>
                </div>
            </div>


            <!-- Separating Line -->
            <div class="my-4 border-t border-gray-700"></div> <!-- Added line -->
            <!-- Repeat for each report -->

            <div class="mb-4 flex rounded shadow-lg bg-gray-800 overflow-hidden" style="max-width: 85vw;">
                <div class="flex-none w-1/5 relative">
                    <img class="absolute inset-0 w-full h-full object-cover rounded-l" src="https://placehold.co/300x350" alt="Report visual placeholder">
                </div>

                <!-- Content on the right -->
                <div class="w-4/5 p-10 flex flex-col justify-between">
                    <div>
                        <h2 class="text-lg font-semibold mb-1">Report Title</h2>
                        <p class="text-gray-400 text-sm">
                            This report presents a comprehensive overview of our recent software development project, detailing the objectives, methodologies employed, key findings, and recommendations for future work. It aims to provide stakeholders with a clear understanding of the project's scope, the challenges encountered, and the solutions implemented to overcome these obstacles.
                        </p>
                        <br>
                        <p class="text-gray-400 text-sm">
                            Additionally, the report includes an analysis of the project's impact on the organization's operational efficiency and suggests areas for further improvement. The insights gained from this project are intended to inform decision-making processes and guide the strategic direction of future development initiatives.
                        </p>
                    </div>
                    <br />
                    <div class="flex">
                        <a asp-controller="Home" asp-action="ViewReport" class="bg-gray-700 text-gray-300 py-2 px-4 mr-2 rounded">View Report</a>
                        <a asp-controller="Home" asp-action="InvestigateReport" class="bg-gray-700 text-gray-300 py-2 px-4 mr-2 rounded">Investigate Report</a>
                    </div>
                </div>
            </div>

            <!-- Separating Line -->
            <div class="my-4 border-t border-gray-700"></div> <!-- Added line -->

        </section>

    </div>
    @section CustomFooter{
        <footer class="fixed bottom-0 left-0 w-full py-4 bg-gray-800 text-center text-sm px-8">
            <span class="float-left mr-4 text-base">Nemesys</span>
            <span class="float-middle mr-4 text-lg">Copyright Nemesys Inc.</span>
            <span class="float-right mr-4 underline text-base">Support</span>
        </footer>
    }
</body>
</html>
