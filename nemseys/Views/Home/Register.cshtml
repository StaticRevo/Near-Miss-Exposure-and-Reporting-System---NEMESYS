@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Register";
}

<div class="container" style="max-width: 20rem; margin-top: 2.5rem; margin-bottom: 2.5rem;">
    <h2 class="display-5 text-center font-weight-bold mb-4">Register</h2>
    <div class="card" style="background-color: #f8f9fa; padding: 2rem; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,.1);">
        <form action="/register" method="post" id="registerForm">
            <div class="form-group">
                <label for="name-and-surname" class="font-weight-bold" style="color: #495057;">Name and Surname</label>
                <input type="text" class="form-control" id="name-and-surname" name="profile.Name" placeholder="Name and Surname" required style="background-color: #ffffff; border: 1px solid #ced4da; padding: .375rem .75rem;">
            </div>
            <div class="form-group">
                <label for="email" class="font-weight-bold" style="color: #495057;">Email</label>
                <input type="email" class="form-control" id="email" name="profile.Email" placeholder="Email" required style="background-color: #ffffff; border: 1px solid #ced4da; padding: .375rem .75rem;">
            </div>
            <div class="form-group">
                <label for="password" class="font-weight-bold" style="color: #495057;">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required style="background-color: #ffffff; border: 1px solid #ced4da; padding: .375rem .75rem;">
            </div>
            <div class="form-group">
                <label for="confirm-password" class="font-weight-bold" style="color: #495057;">Confirm Password</label>
                <input type="password" class="form-control" id="confirm-password" placeholder="Confirm Password" required style="background-color: #ffffff; border: 1px solid #ced4da; padding: .375rem .75rem;">
            </div>
            <div class="text-danger" id="passwordMismatch" style="display:none;">Passwords do not match.</div>

            <div class="form-group">
                <div class="d-flex justify-content-around">
                    <div>
                        <input type="radio" id="investigator" name="role" value="investigator" required>
                        <label for="investigator" class="font-weight-bold" style="color: #495057;">Investigator</label>
                    </div>
                    <div>
                        <input type="radio" id="reporter" name="role" value="reporter" required>
                        <label for="reporter" class="font-weight-bold" style="color: #495057;">Reporter</label>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success" id="registerButton" style="padding: .5rem 1rem; font-size: 1rem;">Register</button>
            </div>
        </form>
    </div>
</div>

<script>
document.getElementById("registerForm").addEventListener("submit", function(event) {
    var password = document.getElementById("password").value;
    var confirmPassword = document.getElementById("confirm-password").value;
    if (password !== confirmPassword) {
        event.preventDefault();
        document.getElementById("passwordMismatch").style.display = "block";
    }
});
</script>
