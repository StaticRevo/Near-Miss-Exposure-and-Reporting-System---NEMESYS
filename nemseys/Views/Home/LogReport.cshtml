@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Log Report";
}
<!-- Main Content -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h2 class="display-5 text-center mb-5 font-weight-bold">Log A Report</h2>

            <div class="mb-5">
                <h3 class="h4 mb-3 font-weight-semibold">Report Information</h3>
                <p class="text-secondary mb-3">
                    We could copy the text box from the UI project here? (With less features)
                </p>
                <textarea class="form-control bg-secondary text-light" rows="6" placeholder="Describe the issue..."></textarea>
            </div>

            <div class="mb-5">
                <h3 class="h4 mb-3 font-weight-semibold">Upload Images</h3>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="customFile">
                    <label class="custom-file-label bg-secondary text-light" for="customFile">
                        <i class="fas fa-upload"></i> Attach images
                    </label>
                </div>
            </div>

            <div class="mb-5">
                <h3 class="h4 mb-3 font-weight-semibold">Report Parameters</h3>
                <p class="text-secondary mb-3">
                    Form here with set fields.
                </p>
            </div>

            <div class="d-flex justify-content-center">
                <button class="btn btn-secondary">Submit Report</button>
            </div>
        </div>
    </div>
</div>
