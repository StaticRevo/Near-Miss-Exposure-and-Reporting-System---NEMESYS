@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Log Report";
}
<!-- Main Content -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h2 class="display-5 text-center mb-5 font-weight-bold">Log A Report</h2>

            <!-- Report Information -->
            <div class="mb-5">
                <h3 class="h4 mb-3 font-weight-semibold">Report Information</h3>
                <p class="text-secondary mb-3">Provide detailed information about the hazard.</p>
                <textarea class="form-control bg-secondary text-light" rows="6" placeholder="Describe the issue..."></textarea>
            </div>

            <!-- Upload Images -->
            <div class="mb-5">
                <h3 class="h4 mb-3 font-weight-semibold">Upload Images</h3>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="customFile">
                    <label class="custom-file-label bg-secondary text-light" for="customFile">Attach images</label>
                </div>
            </div>

            <!-- Report Parameters -->
            <div class="mb-5">
                <h3 class="h4 mb-3 font-weight-semibold">Report Parameters</h3>
                <form>
                    <div class="form-group">
                        <label for="reportDate">Date of Report</label>
                        <input type="date" class="form-control" id="reportDate">
                    </div>
                    <div class="form-group">
                        <label for="hazardLocation">Location of Hazard</label>
                        <input type="text" class="form-control" id="hazardLocation" placeholder="Enter location">
                    </div>
                    <div class="form-group">
                        <label for="hazardDateTime">Date and Time of Hazard</label>
                        <input type="datetime-local" class="form-control" id="hazardDateTime">
                    </div>
                    <div class="form-group">
                        <label for="hazardType">Type of Hazard</label>
                        <select class="form-control" id="hazardType">
                            <option>Unsafe Act</option>
                            <option>Condition</option>
                            <option>Equipment</option>
                            <option>Structure</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="hazardStatus">Status</label>
                        <select class="form-control" id="hazardStatus">
                            <option>Reported</option>
                            <option>Under Review</option>
                            <option>Resolved</option>
                        </select>
                    </div>
                </form>
            </div>

            <!-- Submit Button -->
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-secondary">Submit Report</button>
            </div>
        </div>
    </div>
</div>
