@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Profile";
}

<div class="container px-4 py-2">
    <section>
        <h2 class="display-5 font-weight-bold mb-4 text-center">Profile</h2>
        <!-- Profile Information -->
        <div class="card bg-secondary mb-4">
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <label for="name" class="font-weight-bold">Name:</label>
                        <input type="text" id="name" class="form-control" placeholder="Your name">
                    </div>
                    <div class="form-group">
                        <label for="surname" class="font-weight-bold">Surname:</label>
                        <input type="text" id="surname" class="form-control" placeholder="Your surname">
                    </div>
                    <div class="form-group">
                        <label for="email" class="font-weight-bold">Email:</label>
                        <input type="email" id="email" class="form-control" placeholder="Your email">
                    </div>
                    <div class="form-group">
                        <label for="password" class="font-weight-bold">Password:</label>
                        <input type="password" id="password" class="form-control" placeholder="New password (optional)">
                    </div>
                    <div class="form-group">
                        <label for="profilePicture" class="font-weight-bold">Profile Picture:</label>
                        <input type="file" id="profilePicture" class="form-control-file">
                    </div>
                    <button type="submit" class="btn btn-primary">Update Profile</button>
                </form>
            </div>
        </div>

        <!-- Settings Section -->
        <div class="card bg-secondary">
            <div class="card-body">
                <h3 class="h2 font-weight-bold mb-3">Settings</h3>
                <form>
                    <!-- Example setting -->
                    <div class="form-group">
                        <label for="theme" class="font-weight-bold">Theme:</label>
                        <select id="theme" class="form-control">
                            <option>Dark</option>
                            <option>Light</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Save Settings</button>
                </form>
            </div>
        </div>
    </section>
</div>


