@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Profile";
}

<div class="container px-4 py-2">
    <section>
        <h2 class="display-5 font-weight-bold mb-4 text-center">Profile</h2>
        <!-- Profile Information -->
        <div class="card" style="background-color: #f8f9fa; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,.1); margin-bottom: 2rem;">
            <div class="card-body" style="padding: 2rem;">
                <form>
                    <div class="form-group">
                        <label for="name" class="font-weight-bold" style="color: #495057;">Name:</label>
                        <input type="text" id="name" class="form-control" placeholder="Your name" style="background-color: #ffffff; border: 1px solid #ced4da; padding: .75rem 1.25rem;">
                    </div>
                    <div class="form-group">
                        <label for="surname" class="font-weight-bold" style="color: #495057;">Surname:</label>
                        <input type="text" id="surname" class="form-control" placeholder="Your surname" style="background-color: #ffffff; border: 1px solid #ced4da; padding: .75rem 1.25rem;">
                    </div>
                    <div class="form-group">
                        <label for="email" class="font-weight-bold" style="color: #495057;">Email:</label>
                        <input type="email" id="email" class="form-control" placeholder="Your email" style="background-color: #ffffff; border: 1px solid #ced4da; padding: .75rem 1.25rem;">
                    </div>
                    <div class="form-group">
                        <label for="password" class="font-weight-bold" style="color: #495057;">Password:</label>
                        <input type="password" id="password" class="form-control" placeholder="New password (optional)" style="background-color: #ffffff; border: 1px solid #ced4da; padding: .75rem 1.25rem;">
                    </div>
                    <div class="form-group">
                        <label for="profilePicture" class="font-weight-bold" style="color: #495057;">Profile Picture:</label>
                        <input type="file" id="profilePicture" class="form-control-file">
                    </div>
                    <button type="submit" class="btn btn-primary" style="background-color: #007bff; border-color: #007bff; padding: .5rem 1rem; font-size: 1rem;">Update Profile</button>
                </form>
            </div>
        </div>

        <!-- Settings Section -->
        <div class="card" style="background-color: #f8f9fa; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,.1);">
            <div class="card-body" style="padding: 2rem;">
                <h3 class="h2 font-weight-bold mb-3" style="color: #495057;">Settings</h3>
                <form>
                    <!-- Example setting -->
                    <div class="form-group">
                        <label for="theme" class="font-weight-bold" style="color: #495057;">Theme:</label>
                        <select id="theme" class="form-control" style="padding: .75rem 1.25rem; background-color: #ffffff; border: 1px solid #ced4da;">
                            <option>Dark</option>
                            <option>Light</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary" style="background-color: #007bff; border-color: #007bff; padding: .5rem 1rem; font-size: 1rem;">Save Settings</button>
                </form>
            </div>
        </div>
    </section>
</div>
