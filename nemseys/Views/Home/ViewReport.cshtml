@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "View Report";
}

<div class="container px-4 py-5">
    <section>
        <h2 class="display-5 font-weight-bold mb-4 text-center">Report Title</h2>

        <!-- Report Information -->
        <div class="mb-4">
            <h3 class="h5 font-weight-semibold mb-3">Report Information</h3>
            <p class="text-secondary mb-4">
                This is an example of the description attached to the report this text is literally a placeholder please do not copy this or maybe do copy it if you want some placeholder text i dont know.
            </p>
        </div>

        <!-- Image Section -->
        <div class="d-flex mb-4">
            <div class="flex-fill bg-secondary p-4 mr-2 text-center">No Images Available.</div>
            <div class="flex-fill bg-secondary p-4">
                <h3 class="h5 font-weight-semibold mb-3">Report Parameters</h3>
                <form>
                    <div class="form-group mb-2">
                        <label class="font-weight-bold">Date:</label>
                        <input type="text" class="form-control bg-dark text-white" placeholder="________">
                    </div>
                    <div class="form-group mb-2">
                        <label class="font-weight-bold">People:</label>
                        <input type="text" class="form-control bg-dark text-white" placeholder="________">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold">Other Parameters:</label>
                        <input type="text" class="form-control bg-dark text-white" placeholder="________">
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
