@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Hall Of Fame";
}

<div class="container py-5 my-5">
    <section>
        <h2 class="text-center display-4 font-weight-bold mb-5">Hall of Fame</h2>
        <!-- Podium for Top 3 Reporters -->
        <div class="d-flex justify-content-center mb-5">
            <!-- Second Place -->
            <div class="text-center podium second-place mr-2">
                <h3 class="reporter-name">Johnny</h3>
                <h4 class="report-count">350 Reports</h4>
                <div class="rank">2</div>
            </div>
            <!-- First Place -->
            <div class="text-center podium first-place mx-2">
                <h3 class="reporter-name">Johnny</h3>
                <h4 class="report-count">500 Reports</h4>
                <div class="rank">1</div>
            </div>
            <!-- Third Place -->
            <div class="text-center podium third-place ml-2">
                <h3 class="reporter-name">Johnny</h3>
                <h4 class="report-count">300 Reports</h4>
                <div class="rank">3</div>
            </div>
        </div>

        <!-- Leaderboard List for Other Reporters -->
        <div class="list-group">
            @for (int i = 4; i <= 6; i++)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center leaderboard-entry">
                    <span class="leaderboard-rank">#{i}</span>
                    <span class="reporter-name">Johnny Ive</span>
                    <span class="report-count">200 reports</span>
                </div>
            }
        </div>
    </section>
</div>

<style>
    .podium {
        position: relative;
        padding: 1rem;
        width: 100px;
        border: 1px solid #000; 
    }

    .first-place {
        background-color: gold;
    }

    .second-place {
        background-color: silver;
    }

    .third-place {
        background-color: #cd7f32; 
    }

    .podium .rank {
        position: absolute;
        bottom: -25px; 
        left: 50%;
        transform: translateX(-50%);
        font-size: 2rem; 
        color: #fff; 
    }

    .leaderboard-entry {
        border-bottom: 1px solid #ddd; 
    }

    .leaderboard-rank {
        font-weight: bold;
    }

    .reporter-name {
        flex-grow: 1;
        text-align: left;
    }

    .report-count {
        text-align: right;
    }
</style>
