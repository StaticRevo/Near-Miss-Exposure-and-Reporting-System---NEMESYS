                        <div class="d-flex">
                            <a asp-controller="Home" asp-action="ViewReport" class="btn btn-dark text-secondary py-2 px-4 mr-2">View Report</a>
                            <a asp-controller="Home" asp-action="InvestigateReport" class="btn btn-dark text-secondary py-2 px-4">Investigate Report</a>
                        </div>
