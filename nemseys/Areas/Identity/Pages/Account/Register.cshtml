@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow">
                <div class="card-body p-5">
                    <h2 class="card-title text-center mb-4 dark-grey-text">Create a New Account</h2>
                    <hr />

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.AuthorAlias" class="form-control" placeholder="Full Name">
                            <label asp-for="Input.AuthorAlias" class="dark-grey-text">Name</label>
                            <span asp-validation-for="Input.AuthorAlias" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Email" aria-required="true">
                            <label asp-for="Input.Email" class="dark-grey-text">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Password" aria-required="true">
                            <label asp-for="Input.Password" class="dark-grey-text">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm Password" aria-required="true">
                            <label asp-for="Input.ConfirmPassword" class="dark-grey-text">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <h3 class="h5 mb-3 font-weight-semibold dark-grey-text">Select Role</h3>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" name="roles" id="roleInvestigator" value="Investigator">
                                <label class="form-check-label dark-grey-text" for="roleInvestigator">Investigator</label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" name="roles" id="roleReporter" value="Reporter">
                                <label class="form-check-label dark-grey-text" for="roleReporter">Reporter</label>
                            </div>
                            <a href="/Home/About" class="dark-grey-text">Need help choosing a role? Press to Learn more!</a>
                        </div>

                        <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg w-100 mb-3">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
