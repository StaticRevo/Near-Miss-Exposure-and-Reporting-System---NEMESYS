@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow">
                <div class="card-body p-5">
                    <h2 class="card-title text-center mb-4 dark-grey-text">Log into Your Account</h2>
                    <hr />

                    <form id="account" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email">
                            <label asp-for="Input.Email" class="form-label dark-grey-text">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password">
                            <label asp-for="Input.Password" class="form-label dark-grey-text">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-4 form-check">
                            <input class="form-check-input" asp-for="Input.RememberMe">
                            <label class="form-check-label dark-grey-text" asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg w-100 mb-3">Log in</button>

                        <div class="text-center dark-grey-text">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="link-primary">Forgot your password?</a>
                        </div>
                        <div class="text-center dark-grey-text">
                            <p>Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-primary">Register</a></p>
                        </div>
                        <div class="text-center dark-grey-text">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="link-primary">Resend email confirmation</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
